{
	"name": "react-typescript-template",
	"version": "1.0.0",
	"description": "A starter template for React with Typescript using Webpack 5",
	"private": true,
	"homepage": "https://react-typescript-template.netlify.app/",
	"scripts": {
		"start": "webpack serve --config webpack/webpack.config.js --env env=dev --progress",
		"build": "webpack --config webpack/webpack.config.js --env env=prod",
		"type-check": "tsc --project tsconfig.json --pretty --noEmit",
		"lint": "eslint --fix \"./src/**/*.{js,jsx,ts,tsx,json}\"",
		"pretty": "prettier --write \"./src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage"
	},
	"keywords": [
		"React",
		"TypeScript",
		"Webpack 5",
		"Starter Template",
		"Boilerplate"
	],
	"author": {
		"name": "Atharva Marathe",
		"url": "https://www.atharvamarathe.me/"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/marathe-atharva/react-typescript-template.git"
	},
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/marathe-atharva/react-typescript-template/issues"
	},
	"dependencies": {
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-error-boundary": "^3.1.3",
		"styled-components": "^5.3.0"
	},
	"devDependencies": {
		"@babel/core": "^7.14.6",
		"@babel/plugin-transform-runtime": "^7.14.5",
		"@babel/preset-env": "^7.16.4",
		"@babel/preset-react": "^7.13.13",
		"@babel/preset-react": "^7.14.5",
		"@babel/preset-typescript": "^7.14.5",
		"@babel/runtime": "^7.14.0",
		"@pmmmwh/react-refresh-webpack-plugin": "^0.4.3",
		"@types/jest": "^26.0.23",
		"@types/react": "^17.0.6",
		"@types/react-dom": "^17.0.5",
		"@types/styled-components": "^5.1.10",
		"@typescript-eslint/eslint-plugin": "^4.27.0",
		"@typescript-eslint/parser": "^4.27.0",
		"babel-core": "^6.26.3",
		"babel-loader": "^8.2.2",
		"babel-plugin-module-resolver": "^4.1.0",
		"css-loader": "^5.2.6",
		"eslint": "^7.27.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-import-resolver-typescript": "^2.4.0",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-import": "^2.23.4",
		"eslint-plugin-jsx-a11y": "^6.4.1",
		"eslint-plugin-prettier": "^3.4.0",
		"eslint-plugin-react": "^7.24.0",
		"eslint-plugin-react-hooks": "^4.2.0",
		"html-webpack-plugin": "^5.3.1",
		"husky": "^6.0.0",
		"jest": "^27.0.4",
		"lint-staged": "^11.0.0",
		"mini-css-extract-plugin": "^1.6.0",
		"node-sass": "^6.0.0",
		"prettier": "^2.3.0",
		"react-refresh": "^0.10.0",
		"sass-loader": "^11.1.1",
		"style-loader": "^2.0.0",
		"typescript": "^4.3.2",
		"webpack": "^5.40.0",
		"webpack-cli": "^4.7.2",
		"webpack-dev-server": "^3.11.2",
		"webpack-merge": "^5.8.0"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"src/**/*.{js,jsx,ts,tsx,json}": [
			"eslint --fix"
		],
		"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
			"prettier --write"
		]
	}
}
